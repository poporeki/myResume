<%- include('header_blog') -%>
  <link rel="stylesheet" href="/css/blog/articlePage.css">
  <%- include('sidebar') -%>
    <section class="article-wrapper">
      <article class="article-box" data-artID= <%=art.id %>>
        <div class="article-header">
          <div class="art-title">
            <h2>
              <%=art.title %>
            </h2>
          </div>
          <div class="pt-info">
            <span class="pubtime">发表时间：
              <%=art.createTime %>
            </span>
            <span class="source">来源</span>
            <span class="author">作者:
              <%=art.author %>
            </span>
            <span class="count">阅读数:
              <%=art.readNum %>
            </span>
          </div>
        </div>
        <div class="article-body">
          <%-art.content %>
        </div>
      </article>
      <div class="line"></div>
      <section class="comment-block">
        <h3>发表评论</h3>
        <div class="add-comm clearfix">
          <textarea name="comm_textarea" class="comm-textarea" id="comm_textarea"></textarea>
          <a href="##" class="comm-submit-btn" data-attr="">提交</a>
        </div>
        <div class="comm-list">
          <h3>评论列表(<%=artTotal%>)</h3>
          <!-- 评论列表 -->
          <ul class="list">
            <% for(var i=0;i<artComms.length;i++){ %>
              <li class="comment-item" data-commid= <%=artComms[i].id %> >
                <div>
                  <div class="head-pic">
                    <a href="##">
                      <img src=<%=artComms[i].user.avatar %> alt="avatar">
                    </a>
                  </div>
                  <div class="content">
                    <div class="info">
                      <div class="lt">
                        <div class="username">
                          <%=artComms[i].user.name %>
                        </div>
                        <div class="address">
                          <%=artComms[i].submitAddress %>
                        </div>
                        <div class="p-date">
                          <%=artComms[i].createTime %>
                        </div>
                      </div>
                      <div class="floor-blk">
                        <%=artComms[i].floor+'楼' %>
                      </div>
                    </div>
                    <p>
                      <%=artComms[i].text %>
                    </p>
                    <div class="tools">
                      <a href="##" class="comm-reply-btn">回复</a>
                    </div>
                  </div>

                </div>
                <div class="reply-block">
                  <div class="add-comm clearfix">
                    <textarea name="comm_textarea" class="comm-textarea" id="comm_textarea" cols="30" rows="10"></textarea>
                    <a href="##" class="comm-submit-btn">提交</a>
                  </div>
                  <div class="close-btn"></div>
                </div>
                <!-- 评论中的回复列表 -->
                <%  if(typeof artComms[i].commReps!='undefined'&&artComms[i].commReps.length!=0){ %>
                  <ul class='reply-list show'>
                <%  }else{  %>
                  <ul class='reply-list'>
                <%  } %>
                <% if(typeof(artComms[i].commReps)!='undefined'&&artComms[i].commReps.length!=0){ %>
                  <% var reps=artComms[i].commReps; %>
                  <% for(var j=0;j<reps.length;j++){ %>
                    <li class="comment-item">
                      <div>
                        <span><%='#'+reps[j].floor %></span>
                        <div class="head-pic">
                          <a href="##">
                            <img src=<%=reps[j].user.avatar %> alt="avatar">
                          </a>
                        </div>
                        <div class="content">
                          <div class="info">
                            <div class="lt">
                              <div class="username">
                                <%=reps[j].user.name %>
                              </div>
                              <div class="address">
                                <%=reps[j].submitAddress %>
                              </div>
                              <div class="p-date">
                                <%=reps[j].createTime %>
                              </div>
                            </div>
                          </div>
                          <% if(reps[j].to==''){ %>
                            <p>
                              <%=reps[j].repContent %>
                            </p>
                          <%} else{ %>
                            <p>
                              <%='回复 #'+reps[j].to.floor+" "+reps[j].to.author_id.user_name+':'+reps[j].repContent %>
                            </p>
                          <%}%>
                          <div class="tools">
                            <a href="##" class="comm-reply-btn">回复</a>
                          </div>
                        </div>
                      </div>
                      <div class="reply-block">
                        <div class="add-comm clearfix">
                          <textarea name="comm_textarea" class="comm-textarea" id="comm_textarea" cols="30" rows="10"></textarea>
                          <a href="##" class="comm-submit-btn reply-child" data-repid=<%=reps[j].id %> >提交</a>
                        </div>
                        <div class="close-btn"></div>
                      </div>
                    </li>
                  <%}%>
                  <% if(reps.count>5) { %>
                    <li class="comment-item">
                      还有<%=reps.count-5%>条回复，<a href="##">点击查看<></a>
                    </li>
                  <% } %>
                <%}%>
                  </ul>
                  
                </li>
            <% } %>
            <%if(artTotal>artComms.length){%>
              <li class="comment-more">
                <a href="##" class="more-comms-lk">查看更多评论</a>
              </li>
            <%}%>
          </ul>
        </div>
      </section>
    </section>

    <section class="right-block"></section>

    <%- include('footer_blog') -%>
      <script src="/js/blog/article.js"></script>
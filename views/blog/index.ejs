<%- include('header_blog') -%>

  <link rel="stylesheet" href="/css/blog/index.css">
  <link rel="stylesheet" href="/css/blog/iconfont_blog_index.css">
  <link rel="stylesheet" href="/weather/css/style.css">
  <div class="wrapper">
    <div class="hot-box">
      <div class="lt">
        <%- include('swiper') -%>
      </div>
      <div class="rt">
        <div class="tit">
          <h2>热门</h2>
        </div>
        <div class="swiper-container hot-list">
          <div class="swiper-wrapper"></div>
          <div class="swiper-scrollbar"></div>
        </div>
      </div>
    </div>
    
    <section class="classify">
      <div class="lt">
        <h2 class="title">分类</h2>
      </div>
      <div class="rt">
        <%for(var i=0;i<typeList.length;i++){%>
        <div class="classify-item">
          <a class="type-lk" href="/blog/articlelist?by[type_id]=<%=typeList[i]._id%>">
            <i class='<%= "iconfont icon-"+(typeList[i].type_name).toLowerCase()  %>' ></i>
            <i class='<%= "iconfont bottom icon-"+(typeList[i].type_name).toLowerCase()  %>' ></i>
            <p><%=typeList[i].type_name %></p>
          </a>
        </div>
      <%}%>
      </div>
    </section>
    <div class="sec-wrapper">
      <div class="line"></div>
      <section class="weather">
        <div class="inner">
          <div class="w-icon">
            <div class="icon sun-shower">
              <div class="cloud"></div>
              <div class="sun">
                <div class="rays"></div>
              </div>
              <div class="rain"></div>
            </div>

            <div class="icon thunder-storm">
              <div class="cloud"></div>
              <div class="lightning">
                <div class="bolt"></div>
                <div class="bolt"></div>
              </div>
            </div>

            <div class="icon cloudy">
              <div class="cloud"></div>
              <div class="cloud"></div>
            </div>

            <div class="icon flurries">
              <div class="cloud"></div>
              <div class="snow">
                <div class="flake"></div>
                <div class="flake"></div>
              </div>
            </div>

            <div class="icon sunny">
              <div class="sun">
                <div class="rays"></div>
              </div>
            </div>

            <div class="icon rainy">
              <div class="cloud"></div>
              <div class="rain"></div>
            </div>
          </div>
          <div class="w-info">
            <span class="w-city"><i>四川省</i>成都</span>
            <span class="w-up-time">2018年9月30日 15:32:42</span>
            <span class="w-temp">17</span>
            <span class="w-province">多云</span>
          </div>
        </div>
      </section>
    </div>
    
    <section class="article">
      <artilce class="article-list">
        <h2 class='title'>最新文章
          <a href="blog/articlelist">MORE</a>
        </h2>
        <ul>
          
        </ul>
      </artilce>
      <div class="right-item">
        <h2>Tag标签</h2>
        <div class="articletag-list">
        <% if(tagList.length==0){ %>
          内容为空
        <% }else{ %>
        <% for(var i=0;i<tagList.length;i++){ %>
          <a class='tag-lk' href= "/blog/articlelist?by[tags_id]=<%=tagList[i]._id %>">
            <%= tagList[i].tag_name %>
            <div class="lk-inner">
              <div class="front"><span><%= tagList[i].tag_name %></span></div>
              <div class="back"><span><%= tagList[i].count %></span></div>
            </div>
            
          </a>
        <% }} %>
        </div>
        <h2>最新评论</h2>
        <div class="artcomm-list">
          <% if(commList.length==0){ %>
          内容为空
          <% }else{ %>
          <% for(var i=0;i<commList.length;i++){ %>
            <a class='comm-lk' href= "/blog/article/<%=commList[i].article[0]._id %>#comment">
            <h6 class="arc-tit"><%=commList[i].article[0].title %></h6>
            <%var avatarSrc=commList[i].avatar[0]!=null?commList[i].avatar[0].save_path+'thumbnail_'+commList[i].avatar[0].new_name:'/images/user/avatars/default/1.png';%>
            <div class="arc-comm"><img class="head-pic" src="<%=avatarSrc%>" alt="头像"><%=commList[i].author[0].user_name %> : <span><%=commList[i].comment_text %></span></div> 
            </a>
          <% }} %>
        </div>
      </div>
    </section>
<%- include('footer_blog') -%>
<script src="/js/blog/index.js"></script>
<script>

</script>
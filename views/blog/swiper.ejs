<style>
  .swiper-container {
    height: 300px;
  }

  .swiper-slide {
    text-align: center;
    background-color: rgb(75, 117, 155);
  }
</style>


<div class="swiper-wrap">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <%for(var i=0;i<carouList.length;i++){%>
        <div class="swiper-slide">
        <a href=<%="/blog/article/"+carouList[i]._id %>>
          <h2><%=carouList[i].title%></h2>
          <% var str = carouList[i].content; var imgReg = /<img.*?(?:>|\/>)/gi; var srcReg = /src=[\'\"]?([^\'\"]*)[\'\"]?/i; var arr = str.match(imgReg); %>
          <% if(arr!=null){ %>
            <% var src = arr[0].match(srcReg); %>
              <% if(src==null) {%>
                <img src="/images/login_pic.png" alt="空白">
              <%}else{%>
                <img src=<%=src[1] %> alt="">
              <%}%>
            <% } else{%>
              <img src="/images/login_pic.png" alt="空白">
          <%}%>
        </a>
        </div>
      <%}%>
    </div>
  </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.2/js/swiper.min.js"></script>
<script>
  var mySwiper = new Swiper('.swiper-container', {
    autoplay: true, //可选选项，自动滑动
  })
</script>